<div class="row">
  <div class="col-sm"></div>
  <div class="col-sm">
    <div class="container">
      <h1>Create my gopher</h1>
      <%= form_for(@user) do |f| %>
        <div class="mb-3">
          <%= f.label :username, class: 'form-label' %>
          <%= f.text_field :username, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :password, class: 'form-label' %>
          <%= f.password_field :password, class: 'form-control' %>
        </div>

        <div class="mb-3">
          <%= f.label :age, class: 'form-label' %>
          <%= f.number_field :age, class: 'form-control' %>
        </div>
        
        <div class="mb-3">
          <%= f.label :gender, class: 'form-label' %>
          <%= f.select(:gender, [['Male', 'male'], ['Female', 'female'], ['Keep Secrect', 'keep_secrect']], {}, class: 'form-select') %>
        </div>

        <div class="mb-3">
          <%= f.label :bio, class: 'form-label' %>
          <%= f.text_area :bio, class: 'form-control' %>
        </div>

        <div class="d-grid gap-2">
          <%= f.submit "Create my account" ,class: "btn btn-outline-dark" %>
        </div>
      <% end %>
    </div>  
  </div>
  <div class="col-sm"></div>
</div>
